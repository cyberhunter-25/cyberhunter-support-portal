# Production Environment Variables for CyberHunter Security Portal
# Copy this to .env.production and fill in your values

# Domain Configuration
DOMAIN_NAME=support.cyberhunter.com
USE_LETSENCRYPT=true
ADMIN_EMAIL=admin@cyberhunter.com

# Database
DB_PASSWORD=your-secure-database-password

# Redis
REDIS_PASSWORD=your-secure-redis-password

# Flask
FLASK_SECRET_KEY=your-very-long-random-secret-key-minimum-32-chars

# OAuth - Microsoft Azure
MICROSOFT_CLIENT_ID=your-azure-app-client-id
MICROSOFT_CLIENT_SECRET=your-azure-app-client-secret
MICROSOFT_TENANT_ID=your-tenant-id-or-common

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Email (Gmail)
SMTP_USERNAME=guardian@clirsec.com
SMTP_PASSWORD=your-gmail-app-password
IMAP_USERNAME=guardian@clirsec.com
IMAP_PASSWORD=your-gmail-app-password

# Push Notifications
NTFY_TOPIC=cyberhunter-alerts-prod

# Security
ADMIN_MFA_REQUIRED=true
LOCAL_AUTH_ENABLED=true

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-if-using